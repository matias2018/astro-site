---
import MainLayout from "../layouts/MainLayout.astro";

const hobbies = ['Programming', 'Reading', 'Writing', 'Drawing', 'Gaming', 'Play music'];
---
<MainLayout pageTitle="Hobbies">
  <h2>My hobbies</h2>
  <ul>
    {hobbies.map((hobby) => {
      return <li>{hobby}</li>;
    })}
  </ul>
</MainLayout>


<style>
  body {
    font-family: Arial, Helvetica, sans-serif;
    background-color: #f4f4f4;
  }
  ul {
    list-style-type: none;
  }

  ul.menu {
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #333;
  }
  ul.menu li {
    float: left;
  }
  li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }
  li.active,
  li a:hover {
    background-color: #111;
  }
</style>